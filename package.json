{
  "name": "networking-cafe-service",
  "version": "1.0.0",
  "description": "Backend Service for Networking Cafe",
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "build": "tsc -p tsconfig.prod.json && tsc-alias -p tsconfig.prod.json",
    "start": "yarn build && NODE_ENV=prod node dist/index.js",
    "dev": "NODE_ENV=dev yarn dev:startDB && nodemon",
    "dev:debug": "NODE_ENV=dev dev:startDB && tsx src/index.ts",
    "dev:startDB": "cd src/infra/db/local && docker compose down && docker compose up -d",
    "typeorm": "tsx node_modules/typeorm/cli.js",
    "migration:generate": "yarn typeorm migration:generate -d ./src/infra/db/setup.ts",
    "migrations:run": "yarn typeorm migration:run -- -d ./src/infra/db/setup.ts",
    "migration:revert": "yarn typeorm migration:revert -- -d ./src/infra/db/setup.ts",
    "test": "node --experimental-vm-modules $(yarn bin jest) --testPathIgnorePatterns='.*\\.int\\.test\\.ts$'",
    "test:integration": "node --experimental-vm-modules $(yarn bin jest) --testPathPattern='.*\\.int\\.test\\.ts$'",
    "test:all": "node --experimental-vm-modules $(yarn bin jest)"
  },
  "author": "Aida-Denisa Opirlesc",
  "license": "MIT",
  "dependencies": {
    "express": "^4.19.2",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "ts-jest": "^29.2.2",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@eslint/js": "^9.5.0",
    "@jest/globals": "^29.7.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.7",
    "concurrently": "^8.2.2",
    "docker-compose": "^0.24.8",
    "esbuild": "^0.21.5",
    "eslint": "9.x",
    "globals": "^15.6.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "tsc": "^2.0.4",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.15.7",
    "typescript": "^5.5.2",
    "typescript-eslint": "^7.13.1"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts,tsx",
    "exec": "tsx src/index.ts"
  }
}
